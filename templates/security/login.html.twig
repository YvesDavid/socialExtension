{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container" style="max-width: 480px;">
    <div class="card shadow-sm mt-5">
        <div class="card-body">
            <h4 class="mb-3">Connexion</h4>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input
                        type="email"
                        id="inputEmail"
                        name="_username"          {# <<< IMPORTANT #}
                        class="form-control"
                        value="{{ last_username }}"
                        autocomplete="email"
                        required
                    >
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input
                        type="password"
                        id="inputPassword"
                        name="_password"          {# <<< IMPORTANT #}
                        class="form-control"
                        autocomplete="current-password"
                        required
                    >
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" checked>
                    <label class="form-check-label" for="remember_me">
                        Se souvenir de moi
                    </label>
                </div>

                {# üîê CSRF TOKEN ICI #}
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                    >

                <button class="btn btn-primary w-100" type="submit">
                    Se connecter
                </button>
            </form>

            <hr class="my-4">

            <h6>Comptes de test</h6>
            <div class="small">
                <p class="mb-1">
                    <strong>Admin :</strong><br>
                    Email : <code>admin@test.com</code><br>
                    Mot de passe : <code>admin123</code>
                </p>
                <p class="mb-0">
                    <strong>User :</strong><br>
                    Email : <code>user@test.com</code><br>
                    Mot de passe : <code>user123</code>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
