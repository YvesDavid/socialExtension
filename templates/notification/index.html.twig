{% extends 'base.html.twig' %}

{% block title %}Mes notifications{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-3">
        Mes notifications
        {% if unchecked_count > 0 %}
            <span class="badge bg-danger">{{ unchecked_count }} non lues</span>
        {% endif %}
    </h1>

    {#  Bouton pour supprimer les notifications lues #}
    <form method="post"
        action="{{ path('app_notifications_clear_read') }}"
        class="mb-3">
        <input type="hidden" name="_token" value="{{ csrf_token('clear_read_notifications') }}">
        <button type="submit" class="btn btn-sm btn-outline-danger">
            Supprimer les notifications lues
        </button>
    </form>

    {% if notifications is empty %}
        <div class="alert alert-info">
            Vous n'avez aucune notification pour le moment.
        </div>
    {% else %}
        <div class="list-group">
            {% for notif in notifications %}
                <a href="{{ path('app_notifications_go', {id: notif.id}) }}"
                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-start
                          {% if not notif.checked %}list-group-item-primary{% endif %}">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">{{ notif.title }}</div>
                        <small class="text-muted">
                            {{ notif.createdAt|date('d/m/Y H:i') }}
                        </small>
                        <div>{{ notif.content }}</div>
                    </div>
                    <span class="badge bg-light text-dark border">
                        {{ notif.priority|capitalize }}
                    </span>
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
